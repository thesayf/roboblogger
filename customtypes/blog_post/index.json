            "toc_block": {
              "type": "SharedSlice"
            },
            "quote_block": {
              "type": "SharedSlice"
            },
            "cta_block": {
              "type": "SharedSlice"
            },
            "image_block": {
              "type": "SharedSlice"
            },
            "callout_block": {
              "type": "SharedSlice"
            }
          }
        }
      }
